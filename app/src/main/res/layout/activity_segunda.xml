<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/etNombre_SP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="holaaaaaa" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/etNombre_SP"
        android:text="TamaÃ±o de Fuente:" />

    <EditText
        android:id="@+id/etSize"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/etNombre_SP"
        android:ems="10"
        android:layout_alignParentRight="true"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etSize"
        android:text="Estilo de Fuente:" />

    <Spinner
        android:id="@+id/spFonts"
        android:layout_below="@id/etSize"
        android:layout_alignParentRight="true"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView8"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spFonts"
        android:text="Color de la App:"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView8"
        android:layout_centerHorizontal="true"
        android:text="PrimaryDark" />

    <Button
        android:id="@+id/btnPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPrimaryDark"
        android:layout_centerHorizontal="true"
        android:text="Primary" />

    <Button
        android:id="@+id/btnBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPrimary"
        android:layout_centerHorizontal="true"
        android:text="Background" />


</RelativeLayout>
